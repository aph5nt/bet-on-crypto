@model Web.Models.ManageUserViewModel

<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "m-t", role = "form" }))
{
    @Html.AntiForgeryToken()
     
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New password" })
         
    </div>
    <div class="form-group">

        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", @placeholder = "Confirm password" })

    </div>

    <button type="submit" class="btn btn-primary block full-width m-b">Set password</button>
    
}
